@model Lumen_Merch_Store.ViewModels.CategoryListViewModel

@{
    ViewData["Title"] = "Категорії";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="menu-list-container">
    <h2>Категорії</h2>
    
    <form method="get" action="@Url.Action("Categories", "Catalogue")" class="search-form mb-4">
        <input type="text" name="search" placeholder="Пошук по категоріях..." value="@Model.CurrentSearchTerm" class="form-control" />
        <button type="submit" class="btn btn-info">Знайти</button>
    </form>

    <div class="row category-grid">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Products", "Catalogue", new { categoryId = category.Id })" class="card category-card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">Переглянути товари (@(category.Count ?? 0))</p>
                    </div>
                </a>
            </div>
        }
        
        @if (!Model.Categories.Any())
        {
            <p>Категорії не знайдено.</p>
        }
    </div>
</div>