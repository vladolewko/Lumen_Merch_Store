@model Lumen_Merch_Store.ViewModels.ProductCardViewModel

@if (Model != null)
{
    <div class="product-card">
        <a href="@Url.Action("Product", "Catalogue", new { id = Model.Id })">
            <img 
                src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/300x400/1E1E1E/FACC15.png?text=Product" : Model.ImageUrl)" 
                alt="@(Model.Name ?? "Без назви")" 
                class="product-image">
        </a>
        <div class="product-info">
            <span class="product-universe">@(Model.UniverseName ?? "Невідомий Всесвіт")</span>
            <h4 class="product-name">@(Model.Name ?? "Без назви")</h4>
            <p class="product-price">@(Model.Price.ToString("F2")) ₴</p>
            <button class="btn btn-primary btn-sm w-100">Додати в кошик</button>
        </div>
    </div>
}