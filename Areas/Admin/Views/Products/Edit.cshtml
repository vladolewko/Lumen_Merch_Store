@model Lumen_Merch_Store.Areas.Admin.ViewModels.ProductViewModel
@{
    ViewData["Title"] = $"Редагування Продукту: {Model.NameUk}";
    Layout = "~/Areas/Admin/Views/_Shared/_AdminLayout.cshtml";
}

<div class="admin-main-content">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        
        <input type="hidden" asp-for="Id" /> @* Приховане поле для ID *@

        <h3 class="font-bold text-xl mb-3" style="color: #FACC15;">I. Переклад (Українська)</h3>
        <div class="form-group">
            <label asp-for="NameUk">Назва</label>
            <input asp-for="NameUk" class="form-control" />
            <span asp-validation-for="NameUk" class="text-red-500 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShortDescriptionUk">Короткий опис</label>
            <textarea asp-for="ShortDescriptionUk" class="form-control" rows="2"></textarea>
            <span asp-validation-for="ShortDescriptionUk" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="FullDescriptionUk">Повний опис</label>
            <textarea asp-for="FullDescriptionUk" class="form-control" rows="6"></textarea>
            <span asp-validation-for="FullDescriptionUk" class="text-red-500 text-sm"></span>
        </div>
        
        <h3 class="font-bold text-xl mb-3 mt-6" style="color: #FACC15;">II. Характеристики та Зв'язки</h3>

        <div class="form-group">
            <label asp-for="Price">Ціна (USD)</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stock">Запас на складі</label>
            <input asp-for="Stock" type="number" class="form-control" />
            <span asp-validation-for="Stock" class="text-red-500 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Категорія</label>
            <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control">
                <option value="">-- Оберіть категорію --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="UniverseId">Всесвіт</label>
            <select asp-for="UniverseId" asp-items="@Model.Universes" class="form-control">
                <option value="">-- Оберіть всесвіт --</option>
            </select>
            <span asp-validation-for="UniverseId" class="text-red-500 text-sm"></span>
        </div>

        <div class="mt-8 flex justify-end gap-3">
            <a asp-action="Index" class="btn">Скасувати</a>
            <button type="submit" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-1" viewBox="0 0 20 20" fill="currentColor" style="width: 1rem; height: 1rem; vertical-align: middle;">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zm-7.586 7.586a1 1 0 000 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V6h1a1 1 0 100-2H8a1 1 0 000 2h1v5.586l-1.293-1.293z" />
                </svg>
                Зберегти Зміни
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
