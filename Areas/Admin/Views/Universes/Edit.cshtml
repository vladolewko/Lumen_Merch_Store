@model Lumen_Merch_Store.Areas.Admin.ViewModels.UniverseViewModel

@{
    ViewData["Title"] = $"Редагування Всесвіту: {Model.NameUk}";
    Layout = "~/Areas/Admin/Views/_Shared/_AdminLayout.cshtml";
}

<div class="admin-main-content">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        
        <input type="hidden" asp-for="Id" /> @* Приховане поле для ID *@

        <h3 class="font-bold text-xl mb-3" style="color: #FACC15;">Інформація</h3>

        <div class="form-group">
            <label asp-for="NameUk"></label>
            <input asp-for="NameUk" class="form-control" />
            <span asp-validation-for="NameUk" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="NameEn"></label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-red-500 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionUk"></label>
            <textarea asp-for="DescriptionUk" class="form-control" rows="3"></textarea>
            <span asp-validation-for="DescriptionUk" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="DescriptionEn"></label>
            <textarea asp-for="DescriptionEn" class="form-control" rows="3"></textarea>
            <span asp-validation-for="DescriptionEn" class="text-red-500 text-sm"></span>
        </div>

        <div class="mt-8 flex justify-end gap-3">
            <a asp-action="Index" class="btn">Скасувати</a>
            <button type="submit" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-1" viewBox="0 0 20 20" fill="currentColor" style="width: 1rem; height: 1rem; vertical-align: middle;">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zm-7.586 7.586a1 1 0 000 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V6h1a1 1 0 100-2H8a1 1 0 000 2h1v5.586l-1.293-1.293z" />
                </svg>
                Зберегти Зміни
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}